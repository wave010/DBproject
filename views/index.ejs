    <body>
      <%- include('nav.ejs') %> <!-- Nav bar -->
        <div class="container">
          <div class="row">
            <div class="col-md-6 offset-md-3">
              <h2 class="text-center text-dark mt-5">Login</h2>
              <%- include('./partials/messages') %> 
              <div class="card my-5">
      
                <form class="card-body cardbody-color p-lg-5" method="post">
      
                  <div class="text-center">
                    <!-- <img src="/images/SEN_PAE.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" 
                      width="200px" alt="profile"> -->
                      <i class="fa-solid fa-circle-user User-icon"></i>
                  </div>
      
                  <div class="mb-3">
                    <input type="text" class="form-control" name="email" id="email" aria-describedby="emailHelp"
                      placeholder="Email">
                  </div>
                  <div class="mb-3">
                    <input type="password" class="form-control" name="password" id="password" placeholder="password">
                  </div>
                  <div class="text-center"><button type="submit" class="btn btn-color btn-primary mb-3">Login</button></div>
                  <div id="emailHelp" class="form-text text-center mb-5 text-dark">Not have an account?<a href="/register" class="text-dark fw-bold createaccount" > Create an
                      Account</a>
                  </div>
                </form>
              </div>
      
            </div>
          </div>
        </div>
        <%- include('footer.ejs') %>
